// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 行内元素
inline-block-top($va = top)
  display inline-block
  vertical-align $va

// 阴影
bg-box-shadow()
  box-shadow 0px 0px 8px 0px rgb(224, 224, 224)

// 页面容器初始化
page-init($name)
  .{$name}-page
    position relative
    width 100%
    height 100%
    overflow hidden
    .{$name}-page-left
      position relative
      width 100%
      height 100%
      overflow auto
    .{$name}-page-left-content
      padding 20px 10px 20px 20px
      width 76%
      box-sizing border-box
    .{$name}-page-right
      position absolute
      padding-left 20px
      top 20px
      right 20px
      width 24%
      bottom 20px
      box-sizing border-box

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
